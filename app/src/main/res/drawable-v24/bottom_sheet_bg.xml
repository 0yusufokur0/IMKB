<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/bottom_sheet_rounded_num"
                android:bottomRightRadius="@dimen/bottom_sheet_rounded_num"
                android:topLeftRadius="@dimen/bottom_sheet_rounded_num"
                android:topRightRadius="@dimen/bottom_sheet_rounded_num" />
            <gradient
                android:angle="90"
                android:centerColor="@color/middle_blue_green"
                android:endColor="@color/start_blue"
                android:startColor="@color/start_green" />
        </shape>
    </item>

</layer-list>
